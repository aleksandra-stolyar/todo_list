<!DOCTYPE html>
<html>
  <head>
    <title>TodoList</title>
    <%= stylesheet_link_tag    'application', media: 'all' %>
    <%= javascript_include_tag 'application' %>
    <base href="/">
    <%= csrf_meta_tags %>
  </head>
  <body ng-app="ToDoApp">
    <div id="fb-root"></div>
    <div class="header">
      <div class="row">
        <div class="account-menu">
          <div ng-include="'navbar/_navbar.html'"></div>
        </div>
      </div>

      <div class="row">
        <div class="branding">
          <h1 class="text-center">SIMPLE TODO LISTS</h1>
          <h2 class="text-center">FOR RUBY GARAGE</h2>
        </div>
      </div>
    </div>
    <div class="container content">
      <div class="row">
        <div class="col-md-6 col-md-offset-3">
          <div ui-view></div>
        </div>
      </div>
    </div>
  </body>
</html>
